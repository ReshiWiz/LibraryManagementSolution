@model IEnumerable<LibraryManagement.Models.Reports>

@{
	ViewData["Title"] = "Index";
}

<h1>Report List</h1>

<p>
	<a asp-action="Create" class="btn btn-primary">Create New</a>

</p>
<table class="table table-responsive-sm table-bordered table-striped table-hover">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.ReportDate)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Transaction)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Borrowing)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.ReportDate)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Transaction.TransId)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Borrowing.BorrowingId)
				</td>
				<td>
					<a class="btn btn-outline-info" asp-action="Edit" asp-route-id="@item.ReportId">Edit</a> |
					<a class="btn btn-outline-warning" asp-action="Details" asp-route-id="@item.ReportId">Details</a> |
					<a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.ReportId">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>


<style>
	table {
		width: 100%;
		border-collapse: collapse;
	}

	th, td {
		border: 1px solid #ddd;
		padding: 8px;
		text-align: center
	}

	th {
		background-color: #f2f2f2;
	}

	table td {
		font-size: 18px;
		font-weight: 400;
		text-align: center;
		vertical-align: middle;
	}

	a {
		margin: 4px;
	}

	.create-new-button {
		font-size: 16px;
		font-weight: bold;
	}

	.table {
		border-radius: 10px;
		box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
	}

</style>